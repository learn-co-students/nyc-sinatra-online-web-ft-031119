<h2>Edit Figure</h2>

<form action="/figures/<%=@figure.id%>" method="post">
  <input type="hidden" name="_method" value="patch">
  Name <input type="text" name="figure[name]" value="<%=@figure.name%>" id="figure_name"><br>

  <h3>Titles</h3>

  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>" <%='checked' if @figure.titles.include?(title)%> ><%=title.name%><br>
  <% end %>

  <h2>Create New Title</h2>
  <input type="text" name="title[name]" id="new_title">

  <h3>Landmarks</h3>

  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark)%>><%=landmark.name%><br>
  <% end %>

  <h2>Create New Landmark:</h2>
  Name:<input type="text" name="landmark[name]" id="new_landmark">
  Year:<input type="text" name="landmark[year_completed]">
  <input type="submit" value="Edit Figure">
</form><br><br>
